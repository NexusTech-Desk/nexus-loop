{
  "name": "realestate-transaction-manager",
  "version": "1.0.0",
  "description": "Real Estate Transaction Management Software like dotloop",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"nodemon backend/server.js\" \"cd frontend && PORT=3002 npm start\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.5.0",
    "cors": "^2.8.5",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
